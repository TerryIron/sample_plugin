function new_plugin() {
    local plugin_name="$1"
    local plugin_path="$2"
    local plugin_type="$3"
    local plugin_ver="$4"
    local plugin_mode="$5"
    local old_pwd=$(pwd)
    local split="_"

    cd $plugin_path
    local _plugin_name=$(echo $plugin_name | awk -F"$split" '{print $1}')
    local _plugin=$plugin_type$split$_plugin_name
    mkdir -p $_plugin

    local _module_path="$old_pwd/bin/template"
    source $_module_path/app_loader

    app_loader "$_module_path" "$_plugin" "$plugin_name" "$plugin_path" "$plugin_type" "$plugin_ver" "$plugin_mode"

    cd $old_pwd
    echo "plugin $plugin_name is created"
}

function help() {
    echo "usage: new_plugin [-h] PLUGIN_NAME PLUGIN_TYPE PLUGIN_VER PLUGIN_PATH ..."
}

function main() {
    local plugin_name="$1"
    local plugin_path="$2"
    local plugin_type="$3"
    local plugin_ver="$4"
    local plugin_mode="$5"
    local old_pwd=$(pwd)

    cd $plugin_path
    [ -d "$plugin_name" ] && {
        echo "plugin $plugin_name is exist"
        cd $old_pwd
        exit 1
    }
    cd $old_pwd
    new_plugin "$plugin_name" "$plugin_path" "$plugin_type" "$plugin_ver" "$plugin_mode"
}

target_type=$2
target_ver=$3
target_path=$4
# support [normal, server]
target_mode=$5
[ -z "$target_type" ] && {
    help 
    exit
}
[ -z "$target_ver" ] && {
    target_ver="normal"
}
[ -z "$target_ver" ] && {
    target_ver="0.1.0"
}
[ -z "$target_path" ] && {
    target_path=$(pwd)
}
[ "$1" == "-h" ] && {
    help 
    exit
} || {
    [ "$1" == "" ] && {
        help 
        exit
    }
}

main "$1" "$target_path" "$target_type" "$target_ver" "$target_mode"
