[ "$1" == "-h" ] || [ "$1" == "--help" ] || [ "$1" == "-help" ] && {
    echo "usage: install_plugin [-h] PLUGIN_NAME INSTALL_PATH ..."
    exit
}

pwd=$(pwd)
name=$1
install_path=$2
path="$pwd/templates"

[ -f "$path/$name.zip" ] || {
    echo "plugin $name not found"
    exit 1
}
cp $path/$name.zip $install_path
